<main>

  <h5>投稿を編集</h5>
    <div class="container">
      <table>
        <%= form_with model: @post, url: post_path(@post.id) do |f| %>
          <div>
            <%= f.label :title,"お店のなまえ" %>
            <%= f.text_field :title %>
          </div>
          <div>
            <%= f.label :post_text, "本文" %>
            <%= f.text_field :post_text %>
          </div>
          <div>
            <%= f.label :image %>
            <%= f.file_field :image %>
          </div>
          <div>
            <%= f.collection_select :genre_id, @genres, :id, :name %>
          </div>
          <div>
            <%= f.select :price, Post.prices %>
          </div>
          <div>
            <%= f.collection_check_boxes(:hushtag_ids, Hushtag.all, :id, :name,{include_hidden: false}, html_options: {}) %>
          </div>
        　<div><%= f.label :adress, '住所' %>
        　      <%= f.text_field :address %></div>
          <div>
           <%= f.submit '変更を保存', class:"button" %>
        </div>
        <% end %>
      </table>
    </div>
</main>