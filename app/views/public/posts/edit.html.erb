
<%= form_with model: @post, url: post_path(@post.id) do |f| %>
  <div>
  <%= f.label :post_text, "投稿" %>
  <%= f.text_field :post_text %>
  </div>
  <div>
  <%= f.label :image %>
  <%= f.file_field :image %>
  </div>
  <div>
  <%= f.collection_select :genre_id, @genres, :id, :name %>
  </div>
  
  

　<div class="actions" style="margin:20px 0;">
    <%= f.submit "投稿",class:"btn btn-outline-primary btn-block" %>
  </div>
  <% end %>

  <%= f.submit '変更を保存' %>
<% end %>