
<main>
<h3>ユーザー詳細</h3>

  <%= @user.name %>

<% if current_user != @user%>
  <% if current_user.following?(@user) %>
  <%= link_to "フォロー外す", user_relationships_path(@user), method: :delete %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(@user), method: :post %>
<% end %>
<% end %>


<%= link_to "フォロー", user_followings_path(@user) %><%= @user.followings.count %>
<%= link_to "フォロワー", user_followers_path(@user) %><%= @user.followers.count %>

  <%= image_tag @user.get_image, class: "rounded-circle", size: "150x150" %>
  <%= link_to "編集", edit_user_path(@user),  class: "button" %>



<h3>投稿一覧</h3>

  <% @posts.each do |post| %>
  <%= image_tag post.image %>
  <%#= image_tag 'sample-author1.jpg' %></p>
  <%= post.post_text %>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  <%= link_to "詳細", post_path(post.id),  class: "button" %>
<% end %>

</main>