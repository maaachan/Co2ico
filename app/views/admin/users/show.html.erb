
<main>
  <div class="container">
    <h5>ユーザー詳細画面</h5>
    <table>
      <tr><td><%= @user.name %></td></tr>
      <tr><td><%if @user.get_image.attached?%>
                <%= image_tag @user.get_image, class: "rounded-circle", size: "200x200" %>
                <%else%>
                <%= image_tag asset_path("no_image.jpg"), class: "rounded-circle", size: "200x200" %>
              <%end%>
      </td></tr>
      <%#= image_tag @user.get_image, class: "rounded-circle", size: "150x150" %>
      <tr><td><%= link_to "編集", edit_admin_user_path(@user),  class: "button" %>
              <%= link_to "戻る", admin_users_path, class: "button" %>
      </td></tr>
    </table>
  </div>
</main>
