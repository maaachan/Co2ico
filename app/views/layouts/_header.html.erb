


 <header class="sticky-top">
      <nav class="navbar navbar-expand">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
   <a class="navbar-brand p-1" href="/"><%= image_tag('logo.jpg') %></a>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
             <li class="icon mx-5 mt-2">ようこそ、<%= current_user.name %>さん！</li>
              <li class="nav-item">
                <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
                  <h6 class="icon">マイページ</h6>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_post_path, class: 'nav-link text-light' do %>
                  <h6 class="icon">新規投稿</h6>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to posts_path, class: 'nav-link text-light' do %>
                  <h6 class="icon">投稿一覧</h6>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path, class: 'nav-link text-light' do %>
                  <h6 class="icon">登録者一覧</h6>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, class: 'nav-link text-light' do %>
                  <h6 class="icon">ログアウト</h6>
                <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_posts_path, class: 'nav-link text-light' do %>
                  <h6 class="icon">投稿一覧</h6>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_users_path, class: 'nav-link text-light' do %>
                  <h6 class="icon">登録者一覧</h6>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_genres_path, class: 'nav-link text-light' do %>
                  <h6 class="icon">ジャンル編集</h6>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, class: 'nav-link text-light', method: :delete do %>
                  <h6 class="icon">ログアウト</h6>
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                  <h6 class="icon">新規登録</h6>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                  <h6 class="icon">ログイン</h6>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>